      <a href="/admin/products/list" class="btn btn-outline-success w-100 py-3">
        <i class="fas fa-boxes me-2"></i> Manage Products
      </a>
    </div>
    <div class="col-md-3">
      <a href="/admin/orders" class="btn btn-outline-warning w-100 py-3">
        <i class="fas fa-clipboard-list me-2"></i> View Orders
      </a>
    </div>
    <div class="col-md-3">
      <a href="/" class="btn btn-outline-secondary w-100 py-3">
        <i class="fas fa-home me-2"></i> Back to Site
