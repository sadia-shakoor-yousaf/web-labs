<div class="container py-5">
  <h1 class="mb-4 text-center fw-bold">Admin Dashboard</h1>

  <div class="row g-4 mb-5">
    <!-- Orders Card -->
    <div class="col-md-4">
      <div class="card shadow-sm border-0 text-white bg-primary">
        <div class="card-body">
          <h5 class="card-title">Total Orders</h5>
          <p class="card-text fs-4">143</p>
        </div>
      </div>
    </div>

    <!-- Products Card -->
    <div class="col-md-4">
      <div class="card shadow-sm border-0 text-white bg-success">
        <div class="card-body">
          <h5 class="card-title">Products</h5>
          <p class="card-text fs-4">58</p>
        </div>
      </div>
    </div>

